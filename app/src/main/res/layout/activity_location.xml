<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/login"
    android:layout_height="match_parent"
    tools:context=".ui.LocationActivity">

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search for Top News"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_margin="50dp"
        android:gravity="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/locationEditText"
        android:background="#38ffffff"
        android:hint="Enter Your Location"
        android:layout_below="@id/locationTextView"
        android:textColorHint="@color/white"
        android:layout_margin="10dp"
        android:drawableRight="@drawable/ic_baseline_search_24"
        android:drawablePadding="20dp"
        android:padding="20dp"/>

    <Button
        android:id="@+id/findHomesButton"
        android:text="Search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/design_default_color_secondary_variant" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Saved News"
        android:id="@+id/savedNewsButton"
        android:background="@color/cardview_dark_background"
        android:textColor="@color/white"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


</RelativeLayout>